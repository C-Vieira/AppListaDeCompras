<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_add_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/list_item_add_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Item"
        android:textSize="32sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageButton
        android:id="@+id/delete_list_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"

        android:visibility="invisible"
        android:src="@drawable/ic_delete"
        android:backgroundTint="@color/design_default_color_background"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/item_title_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome:"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"

        app:layout_constraintTop_toBottomOf="@id/list_item_add_header"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/item_title_txtField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="text"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/item_title_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/item_amount_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantidade:"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"

        app:layout_constraintTop_toBottomOf="@id/item_title_txtField"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/item_unit_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unidade:"
        android:layout_marginStart="172dp"
        android:layout_marginTop="40dp"

        app:layout_constraintTop_toBottomOf="@id/item_title_txtField"
        app:layout_constraintLeft_toLeftOf="@id/item_amount_lbl"
        />

    <EditText
        android:id="@+id/item_amount_txtField"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:inputType="text"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/item_amount_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Spinner
        android:id="@+id/item_unit_spinner"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginStart="172dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"

        app:layout_constraintLeft_toLeftOf="@id/item_amount_txtField"
        app:layout_constraintTop_toBottomOf="@id/item_unit_lbl"
        />

    <TextView
        android:id="@+id/item_category_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="categoria:"
        android:layout_marginStart="32dp"

        app:layout_constraintTop_toBottomOf="@id/item_amount_txtField"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Spinner
        android:id="@+id/item_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_category_lbl"
        />

    <Button
        android:id="@+id/item_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"

        app:layout_constraintTop_toBottomOf="@id/item_category_spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>