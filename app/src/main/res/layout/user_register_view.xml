<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_register_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/user_register_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie sua conta"
        android:textSize="32sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/name_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome:"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"

        app:layout_constraintTop_toBottomOf="@id/user_register_header"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/name_txtField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="text"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/name_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/email_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email:"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/name_txtField"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/email_txtField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textEmailAddress"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/email_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/password_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="senha:"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/email_txtField"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/password_txtField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/password_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/confirm_password_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirmar senha:"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/password_txtField"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/confirm_password_txtField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/confirm_password_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"

        app:layout_constraintTop_toBottomOf="@id/confirm_password_txtField"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>